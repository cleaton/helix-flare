{
  "name": "helix-flare",
  "version": "1.0.0",
  "description": "GraphQL Helix for your Cloudflare Workers",
  "module": "./src/index.ts",
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "tsup --dts"
  },
  "tsup": {
    "splitting": false,
    "clean": true,
    "format": [
      "esm",
      "cjs"
    ],
    "entryPoints": [
      "src/index.ts"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "dependencies": {
    "graphql": "15.6.0",
    "graphql-helix": "1.8.0",
    "graphql-middleware": "6.1.6"
  },
  "devDependencies": {
    "esbuild": "0.13.3",
    "prettier": "2.4.1",
    "tsup": "5.2.1",
    "typescript": "4.4.3"
  }
}
